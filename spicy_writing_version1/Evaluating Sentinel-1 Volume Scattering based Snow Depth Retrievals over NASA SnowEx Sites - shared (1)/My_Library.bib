@article{Johnson.2018, 
year = {2018}, 
keywords = {infrasound,avalanche,ISSW,LCC}, 
title = {{Detection and Tracking of Snow Avalanches in Little Cottonwood Canyon, Utah using Multiple Small-Aperture Infrasound Arrays}}, 
author = {Johnson, Jeffrey B. and Marshall, Hans P. and Loo, Sin M. and Nalli, Bill and Saurer, Mark and Havens, Scott and Colton, Javier and Anderson, Jacob F.}, 
journal = {Proceedings International Snow Science Workshop 2018}, 
abstract = {{Two two-element arrays are used to effectively track the progression of snow avalanche in Utah’s Little Cottonwood Canyon during triggered and natural cycles in 2018. We describe the steps used to both triangulate these moving sources, and characterize their spatial errors, using integrated beam forming from two arrays. The two infrasound arrays separated by \textbackslashtextasciitilde103 m and possessing \textbackslashtextasciitilde101.5 m apertures permit efficient triangulation for explosion triggers and moving snow avalanche sources occurring within about 2000 m from the arrays. During the 2018 season, we detect
moving sound sources from hundreds of snow avalanches corresponding to class 1 and 2 avalanches. In many cases we are able to track the sound source(s) traveling down well-known slide paths for more than a kilometer and with speeds up to about 101 m/s, which we consider as a lower bounds on the actual speed of the advancing flow front. Although three arrays were deployed in 2018 and each comprised four infrasonic microphones, we demonstrate that a subset of four sensors (distributed
between two arrays) is especially well suited for quick processing, effective detection, and precise location of the moving avalanche sources. We provide recommendations on the most effective topologies and processing techniques for monitoring avalanche-prone transportation corridors such as
Little Cottonwood Canyon.}}
