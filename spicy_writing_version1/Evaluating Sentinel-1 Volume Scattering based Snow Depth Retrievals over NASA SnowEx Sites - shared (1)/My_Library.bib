@article{Ruiz.2022, 
year = {2022}, 
title = {{Investigation of Environmental Effects on Coherence Loss in SAR Interferometry for Snow Water Equivalent Retrieval}}, 
author = {Ruiz, Jorge Jorge and Lemmetyinen, Juha and Kontu, Anna and Tarvainen, Riku and Vehmas, Risto and Pulliainen, Jouni and Praks, Jaan}, 
